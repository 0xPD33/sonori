[Desktop Entry]
Version=1.0
Type=Application
Name=Sonori
GenericName=Local AI Speech Transcription
Comment=Local AI-powered speech transcription with real-time and manual modes
# Translatable version of GenericName
X-GNOME-FullName=Sonori Local AI Speech Transcription

# Command to execute (supports both GUI and CLI modes)
# Vulkan environment variables are set by the Nix wrapper
Exec=sonori
TryExec=sonori

# Icon - will use hicolor theme hierarchy
Icon=sonori

# Categories for application menu placement
Categories=AudioVideo;Audio;Utility;Accessibility;

# Keywords for better searchability
Keywords=transcription;speech;voice;recognition;whisper;audio;accessibility;local;AI;privacy;offline;

# Only show in graphical environments
Terminal=false
StartupNotify=true

# Application is suitable for inclusion in audio/accessibility menus
X-KDE-StartupNotify=true

# MIME types if the app supports opening audio files (future enhancement)
# MimeType=audio/x-wav;audio/mpeg;

# Actions for different modes
Actions=CLI;Manual;

[Desktop Action CLI]
Name=Run in CLI Mode
Exec=sonori --cli

[Desktop Action Manual]
Name=Run in Manual Mode
Exec=sonori --manual
